@model KeyPairModel

@{
    ViewData["Title"] = "Gerar Par de Chaves";
}


<style>
    .containerDiv {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .key-block {
        width: 650px;
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 30px;
        box-sizing: border-box;
        font-family: Consolas, monospace;
        white-space: pre;
        overflow-wrap: break-word;
        word-wrap: break-word;
        font-size: 17px;
        line-height: 1.3;
    }
</style>


<div class="">
    <form method="POST" enctype="multipart/form-data">
        <div class="containerDiv">
            <h3>Chave Privada</h3>
            <div class="key-block" id="private-key-block">
                @{
                    if (Model.PrivateKey != "")
                    {
                        @Html.Raw(Model.PrivateKey)
                    }
                    else
                    {
                        <p>Chave Privada</p>
                    }
                }
            </div>
        </div>

        <div class="containerDiv">
            <h3>Chave Pública</h3>
            <div class="key-block" id="public-key-block">
                @{
                    if (Model.PrivateKey != "")
                    {
                        @Html.Raw(Model.PublicKey)
                    }
                    else
                    {
                        <p>Chave Pública</p>
                    }
                }
            </div>
            @{
                if (Model.AlreadySubmit)
                {
                    <button asp-controller="Start" asp-action="FirstPage" class="btn btn-outline-primary">Voltar</button>
                }
                else
                {
                    <button action="submit" class="btn btn-outline-success">Gerar Par de Chaves</button>
                }
            }

        </div>

    </form>


</div>