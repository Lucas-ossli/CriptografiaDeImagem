@model KeyPairModel
@{
    ViewData["Title"] = "Criptografar Imagem";
}

<div>

    <form method="post" enctype="multipart/form-data">

        <div>
            <label>Chave PÃºblica:</label>
            <input type="text" asp-for="PublicKey">
        </div>
        <label for="imageInput">Selecione uma imagem:</label>
        <input type="file" id="imageInput" name="imageInput" accept="image/*" asp-for="NormalImage" /><br /><br />

        <div>
            <button action="submit" class="btn btn-primary">Criptografar</button>
        </div>
