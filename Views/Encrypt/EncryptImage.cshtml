    @if (Model.EncryptedData != null)
    {
        <h1>Download do Arquivo Criptografado</h1>
        <p>Clique no link abaixo para baixar o arquivo criptografado:</p>
        <a href="@Url.Action("DownloadEncryptedFile", "Encrypt")">Baixar Arquivo</a>


    }
   
</div>
